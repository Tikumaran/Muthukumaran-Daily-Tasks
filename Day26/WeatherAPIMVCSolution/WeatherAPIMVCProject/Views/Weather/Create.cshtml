@model WeatherAPIMVCProject.Models.Weather

@{
    ViewData["Title"] = "Create";
}

<h1>Add</h1>

<h4>WeatherDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Weather_Date" class="control-label"></label>
                <input asp-for="Weather_Date" class="form-control" value="@DateTime.Now" required />
                <span asp-validation-for="Weather_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" required />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HighTemp" class="control-label"></label>
                <input asp-for="HighTemp" class="form-control" required />
                <span asp-validation-for="HighTemp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LowTemp" class="control-label"></label>
                <input asp-for="LowTemp" class="form-control" required />
                <span asp-validation-for="LowTemp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="forcast" class="control-label"></label>
                <select asp-for="forcast" class="form-control" required>
                    <option value="Rainy">Rainy</option>
                    <option value="Heavy Rainy">Heavy Rainy</option>
                    <option value="Sunny">Sunny</option>
                    <option value="Windy">Windy</option>
                    <option value="Cloudy">Cloudy</option>
                </select>
                <span asp-validation-for="forcast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CityLogin">Back to List</a>
</div>

