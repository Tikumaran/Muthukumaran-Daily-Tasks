@model DBDDListProject.Models.Movies
@{
    ViewBag.Title = "Edit";
    Layout =null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Edit", "Movies", FormMethod.Post))
        {
            <h2>Update Movie</h2>
            <br />
            <table>
                <tr>
                    <td>
                        Movies:
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.Movie_Id, Model.Movie, "Please select")
                    </td>
                </tr>
                <tr>
                    <td>
                        Duration:
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Duration)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Submit" name="action" />
                        <input type="submit" value="Cancel" name="action" />
                    </td>
                </tr>
            </table>
        }

    </div>
</body>
</html>